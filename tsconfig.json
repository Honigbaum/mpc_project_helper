{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["ES2023"],
        "target": "ES2022",
        "allowJs": true,
        "jsx": "react",
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": [
        "./src/**/*",
        "src/custom.d.ts"
    ]
}
